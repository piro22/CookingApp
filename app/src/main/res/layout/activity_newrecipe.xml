<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/primolayout"
        android:padding="30dp"
        >

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Name recipe"
            android:inputType="text"
            android:textSize="30dp" />

        <Space
            android:layout_width="55dp"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btnsalva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="salva"
            android:textSize="20dp"
            android:layout_weight="1"
            android:backgroundTint="#FF4510"
            />

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/primolayout"
       >


    <AutoCompleteTextView
        android:id="@+id/tendina"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:inputType="none"
        />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnAddPortate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Add Portate"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnAddPortate"
        android:orientation="horizontal"
        android:id="@+id/ingredienti"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="1"
            android:hint="enter ingredients here"
            android:layout_centerInParent="true"
            android:id="@+id/input"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/input"
            android:id="@+id/aggiungi"
            android:layout_marginLeft="7sp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_add_24" />

    </LinearLayout>



    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/listviewl"
        app:layout_constraintTop_toBottomOf="@id/ingredienti"
        app:layout_constraintBottom_toTopOf="@+id/procedimento"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/procedimento"
        app:layout_constraintTop_toBottomOf="@+id/listviewl">

        <EditText
            android:id="@+id/TextProcedimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Add procedure"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="15sp" />

    </LinearLayout>




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/procedimento"
            />








</androidx.constraintlayout.widget.ConstraintLayout>